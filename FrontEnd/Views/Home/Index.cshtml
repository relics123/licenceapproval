@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4 mb-4">Welcome to License Management System</h1>
    <p class="lead mb-4">Manage professional licenses for government agencies efficiently</p>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Easy Application</h5>
                    <p class="card-text">Apply for professional licenses online with a simple and intuitive process.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Quick Processing</h5>
                    <p class="card-text">Get your licenses processed and approved quickly with our automated system.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Secure & Reliable</h5>
                    <p class="card-text">Your data is protected with industry-standard security measures.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg me-2">Get Started</a>
        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">Sign In</a>
    </div>
</div>