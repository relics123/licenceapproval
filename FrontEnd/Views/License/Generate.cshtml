@model FrontEnd.Models.LicenseApplicationViewModel
@{
    ViewData["Title"] = "Generate License";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-body p-5">
                <h2 class="card-title text-center mb-4">Generate New License</h2>
                
                <form asp-action="Generate" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="ApplicantName" class="form-label">Applicant Name</label>
                        <input asp-for="ApplicantName" class="form-control" placeholder="Enter applicant full name" />
                        <span asp-validation-for="ApplicantName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="GstNumber" class="form-label">GST Number</label>
                        <input asp-for="GstNumber" class="form-control" placeholder="e.g., 27AAPFU0939F1ZV" />
                        <span asp-validation-for="GstNumber" class="text-danger"></span>
                        <small class="form-text text-muted">Format: 2 digits + 5 letters + 4 digits + 1 letter + 1 digit/letter + Z + 1 digit/letter</small>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="CompanyName" class="form-label">Company Name</label>
                        <input asp-for="CompanyName" class="form-control" placeholder="Enter company name" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="City" class="form-label">City</label>
                        <input asp-for="City" class="form-control" placeholder="Enter city" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    
                    <div class="alert alert-info">
                        <strong>Note:</strong> License fee is â‚¹5,000.00. You will be redirected to payment page after submission.
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100 mb-2">Submit Application</button>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary w-100">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}